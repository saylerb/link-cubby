<div class="col-md-4 col-md-offset-4 well">
  <div class="form-group col-sm-12">
    <div class="col-sm-6"><h4>Create an Account:  </h4></div>
      <div class="col-sm-6 ">
        <%= button_to "Create Account", new_user_path, method: :get, class: "btn btn-primary" %>
      </div>
    </div>

  <div class="col-sm-12">
    <h4 class="col-sm-12">Or Log In with an existing account:</h4>
  </div>

  <div>
    <%= form_for :session, url: login_path, method: :post, html: { class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :email, placeholder: "Enter Email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password, placeholder: "Enter Password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-10">
          <%= f.submit "Sign In", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
