<div class="container">
  <div class="row" id="form-container">
    <div class="col-md-8">
      <form class="form-inline" id="new-link">
        <div class="form-group">
          <label for="title-field">Title:</label>
          <input class="form-control" type="text" id="title-field" name="link[title]" placeholder="Enter a title!">
        </div>
        <div class="form-group">
          <label for="url-field">URL:</label>
          <input class="form-control" type="text" id="url-field" name="link[url]" placeholder="Enter URL!">
        </div>
        <button type="submit" id="submit-link" class="btn btn-primary">Save Link</button>
      </form>
    </div>
  </div>
</div>
<hr>
